@model Candidate

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@Model.ImageThumbnailUrl" alt="No Photo">
            <div class="caption">
                <h3 class="pull-right">@Model.Rating.ToString("c")</h3>
                <h3>
                    <a asp-controller="Candidate" asp-action="Details" asp-route-id="@Model.Id">@Model.LastName @Model.FirstName</a>
                </h3>
                <p>@Model.Description</p>
                <p>@Model.SpecialCase</p>
            </div>

            <div class="addToSelectedTeam">
                <p class="button">
                    <a class="btn btn-primary"
                       asp-controller="SelectedTeam"
                       asp-action="AddToSelectedTeam"
                       asp-route-candidateId="@Model.Id" asp-route-offerPrice="10">Add to selected team</a>
                </p>
            </div>
        </div>
    </div>