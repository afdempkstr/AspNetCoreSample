@model SelectedTeamViewModel

<h2>Your selected team</h2>
<h4>These are the candidates that your company have selected.</h4>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Offer Price</th>
            <th>Candidate</th>
            <th class="text-right">Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var candidate in Model.SelectedTeam.SelectedTeamCandidates)
        {
            <tr>
                <td class="text-center">@candidate.OfferPrice</td>
                <td class="text-left">@candidate.Candidate.LastName @candidate.Candidate.FirstName</td>
                <td class="text-right">@candidate.Candidate.Rating
                    <feature name="RemoveCandidateFromSelectedTeam">
                        <div class="removeFromSelectedTeam">
                                <a class="btn btn-primary"
                                   asp-controller="SelectedTeam"
                                   asp-action="RemoveFromSelectedTeam"
                                   asp-route-candidateId="@candidate.Candidate.Id">Remove</a>
                        </div>
                    </feature>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="2" class="text-right">Total Rating:</td>
            <td class="text-right">
                @Model.SelectedTeamTotalRating.ToString("c")
            </td>
        </tr>
        <tr>
            <td colspan="2" class="text-right">Total Offer Price:</td>
            <td class="text-right">
                @Model.SelectedTeamTotalOffer.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Offer" asp-action="PlaceOffer">Place your offer</a>
</div>