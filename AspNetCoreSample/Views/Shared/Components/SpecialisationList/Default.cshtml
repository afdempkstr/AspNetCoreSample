@model IEnumerable<Specialisation>

<li class="dropdown">
    <a asp-controller="Candidate"
       asp-action="List"
       class="dropdown-toggle" data-toggle="dropdown">Candidates<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var specialisation in Model)
        {
            <li>
                <a asp-controller="Candidate" asp-action="List"
                   asp-route-specialisation="@specialisation.Name">@specialisation.Name</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Candidate" asp-action="List" asp-route-specialisation="">View all Candidates</a>
        </li>
    </ul>
</li>